<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookIt"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.SelectNeedsActivity"></activity>
        <activity android:name=".activity.SignupCompleatActivity" />
        <activity android:name=".activity.SignupActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.ReadingDiaryDetailActivity" />
        <activity android:name=".activity.MarketDetailActivity" />
        <activity android:name=".activity.ChattingActivity" />
        <activity android:name=".activity.WriteReadingDiaryActivity" />
        <activity android:name=".activity.WriteMarketActivity" />
        <activity android:name=".activity.WriteDebateActivity" />
        <activity android:name=".activity.DebateDetailActivity" />
        <activity android:name=".activity.BookDetailActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
    </application>

</manifest>