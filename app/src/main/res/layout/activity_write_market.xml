<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".activity.WriteDebateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/layout_border_bottom_write_debate_and_market"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="판매글 작성"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="업로드"
            android:textColor="#ffd18d"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.8"
        android:paddingLeft="14dp"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="114dp"
                android:layout_height="156dp"
                android:background="@drawable/layout_border_market_image"
                android:gravity="center">
                
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_add_image"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:lines="1"
            android:hint="글 제목"
            android:textSize="16sp"
            android:background="#efefef"
            android:layout_marginTop="10dp"
            android:paddingLeft="14dp"/>

        <Spinner
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#efefef"
            android:layout_marginTop="24dp"/>

        <Spinner
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#efefef"
            android:layout_marginTop="18dp"/>

        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:lines="1"
            android:hint="글 제목"
            android:textSize="16sp"
            android:background="#efefef"
            android:layout_marginTop="18dp"
            android:paddingLeft="14dp"/>

        <EditText
            android:id="@+id/contents"
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:hint="게시글 내용 작성"
            android:textSize="16sp"
            android:background="#efefef"
            android:paddingTop="10dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</LinearLayout>